{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "CRUD of students Minimo1",
    "description": "CRUD Students",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3001",
  "basePath": "/api",
  "tags": [
    {
      "name": "Students",
      "description": "Students"
    },
    {
      "name": "Subjects",
      "description": "Subjects"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/students": {
      "post": {
        "tags": [
          "Students"
        ],
        "description": "Add new Student",
        "parameters": [
          {
            "name": "Student",
            "in": "body",
            "description": "Student that you want to add",
            "schema": {
              "$ref": "#/definitions/Student"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/subjects": {
      "post": {
        "tags": [
          "Subjects"
        ],
        "description": "Add new Subject",
        "parameters": [
          {
            "name": "Subject",
            "in": "body",
            "description": "Subject that you want to add",
            "schema": {
              "$ref": "#/definitions/Subject"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Subject created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "tags": [
          "Subjects"
        ],
        "summary": "Get all subjects",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Subjects"
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/subjects/adduser": {
      "post": {
        "tags": [
          "Subjects"
        ],
        "description": "Add student into a subject",
        "parameters": [
          {
            "name": "identifiers",
            "in": "body",
            "description": "Id of the Student and the Subject",
            "schema": {
              "$ref": "#/definitions/AddUserIntoSubject"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Added successfully"
          },
          "404": {
            "description": "Student or Subject not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/subjects/{subjectId}": {
      "parameters": [
        {
          "name": "subjectId",
          "in": "path",
          "required": true,
          "description": "ID of the subject that you want to see the details",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Subjects"
        ],
        "summary": "See the subject detail",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Subject"
            }
          },
          "404": {
            "description": "Subject not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Student": {
      "required": [
        "name",
        "address",
        "phones"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "phones": {
          "type": "array",
          "items": {
            "type": "object",
            "uniqueItems": true
          }
        }
      }
    },
    "Subject": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "Subjects": {
      "type": "array",
      "$ref": "#/definitions/Subject"
    },
    "AddUserIntoSubject": {
      "required": [
        "subjectId",
        "studentId"
      ],
      "properties": {
        "subjectId": {
          "type": "string"
        },
        "studentId": {
          "type": "string"
        }
      }
    }
  }
}
